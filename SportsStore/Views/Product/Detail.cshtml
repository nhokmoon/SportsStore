@model Product

<h2>Details</h2>
<div class="container">
    <div class="row">
            <div class="card card-outline-primary col-12">
                <img class="card-img-top p-5 m-auto" src="~/images/@Model.ImageUrl" alt="not in stock" />

                <div class="card-block py-3">
                    <h4>
                        @Model.Name
                        <span class="badge badge-pill badge-info" style="float: right">
                            @Model.Price.ToString("c")
                        </span>
                    </h4>
                    <small class="card-text p-1 font-italic">@Model.Category</small>
                    <div class="card-text p-1">@Model.Description</div>
                </div>

                <form id="Model.ProductId" asp-action="AddToCart" asp-controller="Cart" method="post">

                    <input type="hidden" asp-for="ProductId" />

                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

                    <button type="submit" class="btn btn-primary">Add to cart</button>

                </form>
            </div>
    </div>
</div>
